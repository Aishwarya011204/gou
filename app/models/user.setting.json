{
  "primary": "id",

  "filters": [
    {
      "id": "keyword",
      "name": "keyword",
      "render": {
        "type": "component",
        "name": "input-icon",
        "props": {
          "icon": "feather:search",
          "placeholder": "输入关键词搜索"
        }
      }
    }
  ],

  "columns": [
    {
      "id": "name",
      "label": "账号",
      "type": "group",
      "render": {
        "name": "v-block-avatar",
        "props": {
          "headimg": ":headimg",
          "badge": ":badge",
          "initials": "::last(:name, 1)",
          "color": "info",
          "name": ":name",
          "meta": ":meta",
          "size": "medium"
        }
      },
      "form": {
        "name": "input",
        "props": {
          "placeholder": "真实姓名"
        }
      }
    },
    {
      "id": "type",
      "label": "身份",
      "icon": "fab fa-twitter",
      "render": {
        "name": "x-input",
        "props": {
          "view": {
            "name": "v-tags",
            "props": {
              "options": [
                { "label": "管理员", "value": "admin", "color": "danger" },
                { "label": "用户", "value": "staff" }
              ]
            }
          },
          "edit": {
            "name": "f-select",
            "props": {
              "options": [
                { "label": "管理员", "value": "admin" },
                { "label": "用户", "value": "staff" }
              ]
            }
          }
        }
      },
      "form": {
        "name": "select",
        "props": {
          "searchable": true,
          "placeholder": "请选择身份",
          "options": [
            { "label": "管理员", "value": "admin" },
            { "label": "用户", "value": "staff" }
          ]
        }
      },
      "validation": {}
    },
    {
      "id": "mobile",
      "label": "手机号",
      "model": "mobile",
      "render": {
        "name": "editor-input",
        "props": {
          "view": {
            "type": "component",
            "name": "label-mask",
            "props": {
              "mask": "999-****-999"
            }
          }
        }
      },
      "form": {
        "name": "input",
        "props": {
          "placeholder": "手机号"
        }
      }
    },
    {
      "id": "key",
      "label": "API Key",
      "render": {
        "name": "v-label",
        "props": {
          "value": ":key",
          "mask": "XXX****XXX"
        }
      },
      "form": {
        "name": "input",
        "props": {
          "placeholder": "API Key"
        }
      }
    },
    {
      "id": "secret",
      "label": "API Secret",
      "model": "secret",
      "render": {
        "name": "x-input",
        "props": {
          "view": {
            "name": "v-label",
            "props": {
              "tippy": ":secret"
            }
          },
          "edit": {
            "name": "f-input",
            "props": {
              "model": "secret",
              "width": "300px"
            }
          }
        }
      },
      "form": {
        "name": "input",
        "props": {
          "placeholder": "API Secret"
        }
      }
    },
    {
      "id": "password",
      "label": "登录密码",
      "model": "password",
      "render": {
        "name": "editor-input-password",
        "props": {
          "value": ":password"
        }
      },
      "form": {
        "name": "input",
        "props": {
          "placeholder": "请再次输入密码，无需修改请留空",
          "type": "password"
        }
      }
    },
    {
      "id": "repassword",
      "label": "重复密码",
      "model": "repassword",
      "render": {
        "name": "editor-input-password",
        "props": {
          "value": ":repassword"
        }
      },
      "form": {
        "name": "input",
        "props": {
          "placeholder": "请再次输入密码，无需修改请留空",
          "type": "password"
        }
      }
    },
    {
      "id": "created_at",
      "label": "创建时间",
      "model": "created_at",
      "render": {
        "name": "label-datetime",
        "props": {
          "tippy": ":created_at",
          "format": "YYYY年MM月DD日 @hh:mm:ss"
        }
      },
      "form": {
        "name": "datetime-picker"
      }
    },
    {
      "id": "updated_at",
      "label": "更新时间",
      "model": "updated_at",
      "render": {
        "name": "label-datetime",
        "props": {
          "format": "YYYY年MM月DD日 @hh:mm:ss"
        }
      },
      "form": {
        "name": "datetime-picker"
      }
    },
    {
      "id": "status",
      "label": "状态",
      "model": "status",
      "render": {
        "name": "x-input",
        "props": {
          "view": {
            "name": "v-tags",
            "props": {
              "options": [
                { "label": "开启", "value": "enabled", "color": "primary" },
                { "label": "关闭", "value": "disabled", "color": "danger" }
              ]
            }
          },
          "edit": {
            "name": "f-select",
            "props": {
              "options": [
                { "label": "开启", "value": "enabled" },
                { "label": "关闭", "value": "disabled" }
              ]
            }
          }
        }
      },
      "form": {
        "name": "select",
        "props": {
          "placeholder": "状态",
          "options": [
            { "label": "开启", "value": "enabled" },
            { "label": "关闭", "value": "disabled" }
          ]
        }
      }
    }
  ],
  "permission": {
    "__yao_create": true,
    "__yao_update": true,
    "__yao_delete": true,
    "__yao_retrieve": true,
    "__yao_update_fields": ["*"],
    "__yao_create_fields": ["*"],
    "__yao_retrieve_fields": ["*"]
  }
}
